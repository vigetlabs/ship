# shellcheck shell=bash
# shellcheck disable=SC2154
# vim: ft=sh

red="\\033[0;31m"
green="\\033[0;32m"
# yellow="\\033[0;33m"
cyan="\\033[0;36m"
nc="\\033[0m"

puts() {
  echo -e "$*" | tee -a "$log_file"
}

puterr() {
  echo -e "$@" >&2 | tee -a "$log_file"
}

log() {
  echo "$*" >> "$log_file"
}

info() {
  puts "â†’ ${cyan}$*${nc}"
}

success() {
  puts "${green}$*${nc}"
}

failure() {
  puterr "${red}$*${nc}"
}

abort() {
  if [ $# -gt 0 ]; then
    puterr "$*"
  fi

  exit 1
}
